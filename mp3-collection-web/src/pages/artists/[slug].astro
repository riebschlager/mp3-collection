---
import Layout from '../../layouts/Layout.astro';
import TrackList from '../../components/TrackList.astro';

export async function getStaticPaths() {
  // Load artist index
  const artistsIndex = await import('../../../public/data/artists-index.json');

  // Generate a path for each artist
  return artistsIndex.artists.map((artist: any) => ({
    params: { slug: artist.slug },
    props: { artist }
  }));
}

const { artist } = Astro.props;

// Load all tracks for this artist from all chunks
const allTracks: any[] = [];
const totalChunks = 49; // We know there are 49 chunks

for (let i = 1; i <= totalChunks; i++) {
  const chunkNum = String(i).padStart(3, '0');
  try {
    const chunk = await import(`../../../public/data/chunks/tracks-${chunkNum}.json`);
    const artistTracks = chunk.tracks.filter((t: any) => t.artistSlug === artist.slug);
    allTracks.push(...artistTracks);
  } catch (e) {
    // Chunk might not exist, skip
  }
}

// Group tracks by album
const albumGroups = new Map<string, any[]>();
allTracks.forEach(track => {
  const albumName = track.album || 'Unknown Album';
  if (!albumGroups.has(albumName)) {
    albumGroups.set(albumName, []);
  }
  albumGroups.get(albumName)!.push(track);
});

// Sort albums alphabetically and tracks within each album by track number
const sortedAlbums = Array.from(albumGroups.entries())
  .map(([album, tracks]) => ({
    name: album,
    slug: tracks[0]?.albumSlug || 'unknown',
    tracks: tracks.sort((a, b) => {
      // Sort by disc number first, then track number
      if (a.discNumber !== b.discNumber) {
        return (a.discNumber || 0) - (b.discNumber || 0);
      }
      return (a.trackNumber || 0) - (b.trackNumber || 0);
    })
  }))
  .sort((a, b) => a.name.localeCompare(b.name));

// Calculate statistics
const totalDuration = allTracks.reduce((sum, t) => sum + (t.duration || 0), 0);
---

<Layout title={`${artist.name} - MP3 Collection`} description={`Browse ${allTracks.length} tracks by ${artist.name} across ${artist.albumCount} albums`}>
  <div class="space-y-8">
    <!-- Artist Header -->
    <div class="bg-white rounded-lg shadow-lg p-8">
      <h1 class="text-4xl font-bold text-gray-900 mb-4">{artist.name}</h1>

      <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mt-6">
        <div>
          <div class="text-2xl font-bold text-blue-600">{allTracks.length}</div>
          <div class="text-sm text-gray-600">Tracks</div>
        </div>
        <div>
          <div class="text-2xl font-bold text-green-600">{sortedAlbums.length}</div>
          <div class="text-sm text-gray-600">Albums</div>
        </div>
        <div>
          <div class="text-2xl font-bold text-purple-600">{Math.floor(totalDuration / 60)}m</div>
          <div class="text-sm text-gray-600">Total Duration</div>
        </div>

      </div>
    </div>

    <!-- Albums -->
    {sortedAlbums.map(({ name, slug, tracks }) => (
      <div class="space-y-4">
        <div class="flex items-center justify-between">
          <h2 class="text-2xl font-bold text-gray-900">{name}</h2>
          <a
            href={`/albums/${slug}`}
            class="text-blue-600 hover:text-blue-800 text-sm"
          >
            View Album â†’
          </a>
        </div>
        <TrackList tracks={tracks} showArtist={false} showAlbum={false} />
      </div>
    ))}

    {allTracks.length === 0 && (
      <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-6">
        <p class="text-yellow-800">No tracks found for this artist.</p>
      </div>
    )}
  </div>
</Layout>
