---
import Layout from '../../layouts/Layout.astro';

// Load all albums
const albumsIndex = await import('../../../public/data/albums-index.json');

// Sort alphabetically
const sortedAlbums = [...albumsIndex.albums].sort((a, b) => a.name.localeCompare(b.name));

// Group by first letter/character
const albumsByLetter = new Map<string, any[]>();
sortedAlbums.forEach(album => {
  const firstChar = album.name[0].toUpperCase();
  const letter = /[A-Z]/.test(firstChar) ? firstChar : '#';
  if (!albumsByLetter.has(letter)) {
    albumsByLetter.set(letter, []);
  }
  albumsByLetter.get(letter)!.push(album);
});

const letters = Array.from(albumsByLetter.keys()).sort((a, b) => {
  if (a === '#') return 1;
  if (b === '#') return -1;
  return a.localeCompare(b);
});

const buildUrl = (path: string) => {
  const base = import.meta.env.BASE_URL;
  const cleanPath = path.startsWith('/') ? path.slice(1) : path;
  const separator = base.endsWith('/') ? '' : '/';
  return `${base}${separator}${cleanPath}`;
};
---

<Layout title="Albums - MP3 Collection" description={`Browse ${albumsIndex.total} albums from the MP3 collection`}>
  <div class="space-y-8">
    <div>
      <h1 class="text-4xl font-bold text-gray-900 mb-2">Albums</h1>
      <p class="text-gray-600">{albumsIndex.total.toLocaleString()} albums in the collection</p>
    </div>

    <!-- Letter Navigation -->
    <div class="bg-white rounded-lg shadow p-4 sticky top-20 z-40">
      <div class="flex flex-wrap gap-2 justify-center">
        {letters.map(letter => (
          <a
            href={`#${letter}`}
            class="px-3 py-1 bg-green-100 text-green-700 hover:bg-green-200 rounded font-medium"
          >
            {letter}
          </a>
        ))}
      </div>
    </div>

    <!-- Album Listings -->
    {letters.map(letter => {
      const albums = albumsByLetter.get(letter) || [];
      return (
        <div id={letter} class="scroll-mt-32">
          <h2 class="text-3xl font-bold text-gray-900 mb-4 border-b-2 border-green-500 pb-2">
            {letter}
          </h2>
          <div class="overflow-x-auto bg-white rounded-lg shadow border border-gray-100">
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-gray-50">
                <tr>
                  <th
                    scope="col"
                    class="px-4 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wide"
                  >
                    Album
                  </th>
                  <th
                    scope="col"
                    class="px-4 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wide"
                  >
                    Artist(s)
                  </th>
                  <th
                    scope="col"
                    class="px-4 py-3 text-right text-xs font-semibold text-gray-500 uppercase tracking-wide"
                  >
                    Tracks
                  </th>
                </tr>
              </thead>
              <tbody class="divide-y divide-gray-100">
                {albums.map(album => (
                  <tr class="hover:bg-gray-50">
                    <td class="px-4 py-3">
                      <a
                        href={buildUrl(`albums/${album.slug}`)}
                        class="text-green-600 font-medium hover:text-green-800"
                      >
                        {album.name}
                      </a>
                    </td>
                    <td class="px-4 py-3 text-sm text-gray-600">
                      {album.artists.slice(0, 2).join(', ')}
                      {album.artists.length > 2 && ` +${album.artists.length - 2} more`}
                    </td>
                    <td class="px-4 py-3 text-right text-sm text-gray-600">{album.trackCount}</td>
                  </tr>
                ))}
              </tbody>
            </table>
          </div>
        </div>
      );
    })}
  </div>
</Layout>
